<h3>Items On Sale</h3>

<div id = "onsale">
<% @sale_products.each do |product| %>

	<p><strong><%= link_to product.name, product%></strong></p>
    <% if product.image.present? %>
      <p class="img"><%= image_tag product.image.url(:thumb) %></p>
    <% end %>
	<p><%= product.description %></p>
  <p><strong>Stocks Remaining:</strong> <%= number_to_human product.quantity %></p>
  <p><strong>Regular Price:</strong> <%= number_to_currency product.price%></p>
	<p id="sale_price"><strong>Sale Price:</strong> <%= number_to_currency product.onsale_price%></p>
<% end %>

</div>

<h3>Recent Items</h3>

<div id = "recent">
<% @recent_products.each do |product| %>

	<p>
	<strong><%= link_to product.name, product%></strong>
	</p>
    <% if product.image.present? %>
      <p class="img">
        <%= image_tag product.image.url(:thumb) %>
      </p>
    <% end %>
		<p><%= product.description %></p>
    <p><strong>Brand:</strong> <%= product.brand.name %></p>
    <p>
		<strong>Stocks Remaining: </strong>
		<%= number_to_human product.quantity %>
		</p>
    <p><strong>Price:</strong> <%= number_to_currency product.price%></p>
<% end %>
<div id="paginate">
		<%= paginate @recent_products %>
	</div>

</div>


